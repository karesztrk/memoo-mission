---
import "@picocss/pico/css/pico.min.css";
import Header from "@/components/Header";
import Footer from "@/components/Footer";
import "@/assets/styles/fonts.css";
import "@/assets/styles/global.css";
import emojis from "@/assets/emojis.json";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light" />
    <title>Memoo Mission</title>
    <meta name="description" content="Play a game with Memoo Mission" />
    <link rel="preload" href="https://fonts.cdnfonts.com/css/gilroy-bold" as="style" type="text/css" crossorigin />
  </head>
  <body>
    <Header client:load deck={emojis} />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>
